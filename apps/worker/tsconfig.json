{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "paths": {
      "@halacha-ai/db": ["../../packages/db/index.ts"],
      "@halacha-ai/lib": ["../../packages/lib/index.ts"]
    }
  },
  "include": ["**/*.ts", "../../packages/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
